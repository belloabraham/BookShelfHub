<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookShelfHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/night</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/night</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/night</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="p">@color/blue_grey_100</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">false</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/night</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="p">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>
    </style>


</resources>