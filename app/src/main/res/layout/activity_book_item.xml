<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookItemActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/search_ic_outline_arrow_back_24"
            app:titleTextColor="?colorOnBackground"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="?backgroundColor" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_24"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_16"
                android:paddingHorizontal="@dimen/size_24"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="@string/trans_book"
                    app:strokeColor="@color/icon_color"
                    app:cardElevation="3dp"
                    app:cardMaxElevation="3dp"
                    app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:id="@+id/cover"
                    android:contentDescription="@null" />

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:id="@+id/title"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/size_8"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:id="@+id/author"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/noRatingTxt"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:layout_gravity="center_horizontal"
                        app:drawableEndCompat="@drawable/ic_star_16" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/noOfReviewTxt"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="@dimen/size_24"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/listDivider" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:textSize="14sp"
                        android:textColor="?colorOnBackground"
                        android:id="@+id/noOfDownloadsText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/downloads"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_24"
                    android:background="?android:attr/listDivider" />


                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:paddingVertical="0dp"
                        android:textColor="@android:color/secondary_text_light"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:drawableTop="@drawable/ic_share_arrow"
                        android:text="@string/share"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24"
                android:layout_marginTop="@dimen/size_16"
                android:backgroundTint="?colorPrimaryVariant"
                android:visibility="gone"
                android:text="@string/add_to_Cart"
                android:id="@+id/addToCartBtn"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24"
                android:layout_marginTop="@dimen/size_16"
                android:backgroundTint="?colorPrimaryVariant"
                android:visibility="gone"
                android:text="@string/download"
                android:id="@+id/downloadBtn"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginTop="@dimen/size_16"
                style="@style/BookItemNavCard"
                android:id="@+id/aboutBookCard">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_16"
                    android:layout_marginVertical="@dimen/size_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/about_this_book"
                        style="@style/BookNavItemsTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_arrow_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24"
                android:layout_marginBottom="@dimen/size_16"
                android:text="@string/lorep_ipsum"
                android:id="@+id/descText"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                style="@style/BookItemNavCard"
                android:id="@+id/reviewCard">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_16"
                    android:layout_marginVertical="@dimen/size_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/ratings_reviews"
                        style="@style/BookNavItemsTitle"/>


                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_arrow_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reviewRecView"
                android:layout_marginHorizontal="@dimen/size_24" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/allReviewsBtn"
                android:layout_gravity="center_horizontal"
                android:text="@string/see_all_reviews"
                android:textColor="@color/light_blue_A200"
                style="@style/Widget.AppCompat.Button.Borderless"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                style="@style/BookItemNavCard"
                android:id="@+id/similarBooksCard">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_16"
                    android:layout_marginVertical="@dimen/size_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/similar_books"
                        style="@style/BookNavItemsTitle"/>


                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_arrow_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:id="@+id/similarBooksRecView" />

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkoutBtnContainer"
        android:layout_margin="@dimen/size_16"
        android:layout_gravity="bottom|end">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/checkoutOutBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            app:cardBackgroundColor="?colorPrimaryVariant"
            app:cardCornerRadius="30dp"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_cart"
                app:tint="@android:color/white" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/checkoutNotifCard"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|top"
            app:cardBackgroundColor="?colorError"
            app:cardCornerRadius="@dimen/notif_circle_size">

            <TextView
                android:id="@+id/checkoutNotifText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textColor="?colorOnError"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp" />
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>