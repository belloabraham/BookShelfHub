<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_50"
    tools:context=".ui.main.ProfileFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_16"
            android:orientation="vertical">

            <com.bookshelfhub.bookshelfhub.view.ExpandableCardView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="@string/account"
                app:icon="@drawable/ic_profile"
                app:inner_view="@layout/account"
                app:expandOnClick="true"
                app:animationDuration="@integer/nav_anim_duration"
                app:startExpanded="false"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/verifyPhoneCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_cellphone_basic"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/verify_phone_number"
                        style="@style/ProfileItemTitle"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/notif_circle_size"
                        android:layout_height="@dimen/notif_circle_size"
                        android:id="@+id/verifyPhoneNotifCard"
                        app:cardCornerRadius="@dimen/notif_circle_size"
                       style="@style/ProfileNotifCircle">
                        <TextView
                            android:id="@+id/verifyPhoneNotifText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ProfileNotiText"
                            android:text="@string/exclamation"/>
                    </com.google.android.material.card.MaterialCardView>


                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>


                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/verifyEmailCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_email_at"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/verify_email"
                        style="@style/ProfileItemTitle"/>



                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/notif_circle_size"
                        android:layout_height="@dimen/notif_circle_size"
                        app:cardCornerRadius="@dimen/notif_circle_size"
                        android:id="@+id/verifyMailNotifCard"
                        style="@style/ProfileNotifCircle"
                        >
                        <TextView
                            android:id="@+id/verifyMailNotifText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ProfileNotiText"
                            android:text="@string/exclamation"/>
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/signOutCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_sign_out"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sign_out"
                        style="@style/ProfileItemTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/publishBookCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_typewriter"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/publish_book"
                        style="@style/ProfileItemTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <View android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/settings"
                android:layout_marginTop="@dimen/size_16"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/size_16"
                android:textSize="22sp"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"/>

                 <FrameLayout
                android:layout_width="match_parent"
                     android:layout_marginVertical="@dimen/size_4"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/show_progess"
                    android:gravity="center"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/profile_title_margin_start"
                    android:textSize="18sp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                <com.bitvale.switcher.SwitcherX
                    android:id="@+id/progressPopupToggle"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    app:switcher_off_color="?attr/colorSecondary"
                    app:switcher_on_color="?attr/colorPrimary"
                    app:switcher_icon_color="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/size_16"/>
            </FrameLayout>

            <View android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider"/>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/updateCard"
                android:visibility="gone"
                style="@style/ProfileItemCardView">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_update"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/new_update"
                        style="@style/ProfileItemTitle"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/notif_circle_size"
                        android:layout_height="@dimen/notif_circle_size"
                        app:cardCornerRadius="@dimen/notif_circle_size"
                        android:id="@+id/updateNotifCard"
                        style="@style/ProfileNotifCircle">
                        <TextView
                            android:id="@+id/updateNotifText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ProfileNotiText"
                            android:text="@string/exclamation"/>
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reviewCard"
                style="@style/ProfileItemCardView">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_rating_yellow"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/size_16"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/write_review"
                        style="@style/ProfileItemTitle"
                        android:layout_marginStart="120dp"/>


                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inviteFreindsCard"
                style="@style/ProfileItemCardView">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_share_24"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/invite_friends"
                        style="@style/ProfileItemTitle"/>


                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacyPolicyCard"
                style="@style/ProfileItemCardView">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_privacy_black_24"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/privacy"
                        style="@style/ProfileItemTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/termsOfUseCard"
                style="@style/ProfileItemCardView">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_file_document"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/terms"
                        style="@style/ProfileItemTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/needHelpCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_chat"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/need_help"
                        style="@style/ProfileItemTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/aboutCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_info_black_24dp"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/about"
                        style="@style/ProfileItemTitle"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>



        </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>