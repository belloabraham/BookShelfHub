<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/size_16"
    tools:context=".ui.main.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/settings"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/size_16"
                android:textSize="20sp"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_height="52dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/dark_mode"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="56dp"
                        android:textSize="18sp"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                    <com.bitvale.switcher.SwitcherX
                        android:id="@+id/switcher_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="0dp"/>


                    <com.bitvale.switcher.SwitcherC
                        android:id="@+id/switcher_c"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </FrameLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacyPolicyCard"
                style="@style/ProfileItemCardView">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_privacy_black_24"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/privacy"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="56dp"
                        android:textSize="18sp"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_file_document"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/terms"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="56dp"
                        android:textSize="18sp"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/aboutCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_info_black_24dp"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/about"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="56dp"
                        android:textSize="@dimen/size_18sp"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="?android:attr/listDivider"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemCardView"
                android:id="@+id/signOutCard">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/size_4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:src="@drawable/ic_sign_out"
                        android:layout_gravity="start"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sign_out"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="56dp"
                        android:textSize="@dimen/size_18sp"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                    <ImageView
                        android:layout_width="@dimen/image_btn_size"
                        android:layout_height="@dimen/image_btn_size"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"/>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</FrameLayout>