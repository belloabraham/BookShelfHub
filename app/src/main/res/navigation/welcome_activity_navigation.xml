<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_navigation"
    app:startDestination="@id/onBoardingFragmentDirection">

    <fragment
        android:id="@+id/onBoardingFragmentDirection"
        android:name="com.bookshelfhub.bookshelfhub.ui.welcome.OnBoardingFragment"
        android:label="OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/enter_from_right" />
        <action
            android:id="@+id/action_onBoardingFragmentDirection_to_userInfoFragment"
            app:destination="@id/userInfoFragment"
            app:enterAnim="@anim/enter_from_right" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.bookshelfhub.bookshelfhub.ui.welcome.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_verificationFragment"
            app:destination="@id/verificationFragment"
            app:enterAnim="@anim/enter_from_right" />
        <argument
            android:name="login_signup"
            app:argType="string" />
        <action
            android:id="@+id/action_loginFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.bookshelfhub.bookshelfhub.ui.welcome.VerificationFragment"
        android:label="fragment_verification"
        tools:layout="@layout/fragment_verification" >
        <action
            android:id="@+id/action_verificationFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment"
            app:enterAnim="@anim/enter_from_right" />
        <argument
            android:name="phoneNumber"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.bookshelfhub.bookshelfhub.ui.welcome.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" >
        <argument
            android:name="isNewUser"
            app:argType="boolean" />
    </fragment>
</navigation>