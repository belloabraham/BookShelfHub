<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="BookItemImageView" parent="">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/CurvedEdgesImageShape</item>
    </style>

    <style name="RoundImageShape" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CurvedEdgesImageShape" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="LinkBuilder">
        <item name="defaultLinkColor">@color/orange</item>
        <item name="defaultTextColorOfHighlightedLink">@color/light_blue_A400</item>
    </style>

    <style name="PhoneNumberErrorBtn">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_baseline_info_24_red</item>
    </style>

    <style name="ProfileItemCardView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundColor">?backgroundColor</item>
    </style>

    <style name="CartItemTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>


    <style name="SearchItemTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginEnd">@dimen/size_16</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchItemAuthor" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="ProfileNotifCircle">
        <item name="cardBackgroundColor">?colorError</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">56dp</item>
    </style>

    <style name="ProfileNotiText">
        <item name="android:textColor">?colorOnError</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileItemTitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/profile_item_title_size</item>
        <item name="android:layout_marginStart">56dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="StoreItemsTitleCard" parent="ProfileItemCardView">
        <item name="android:textSize">@dimen/profile_item_title_size</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

    <style name="BookItemNavCard" parent="StoreItemsTitleCard"/>

    <style name="StoreItemsTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/profile_item_title_size</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="BookNavItemsTitle" parent="StoreItemsTitle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="Widget.Theme.BookShelfHub.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.BookShelfHub.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>