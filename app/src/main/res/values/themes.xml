<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookShelfHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/light_blue_A400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_A400</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorAccent">@color/orange</item>

        <item name="backgroundColor">@color/white</item>
        <item name="android:colorBackground">?backgroundColor</item>
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">?backgroundColor</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="p">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/slide</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/expand_view
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/expand_view
        </item>

    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?backgroundColor</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="p">
            @android:color/transparent
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">false</item>
    </style>

    <style name="Theme.BookShelfHub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookShelfHub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookShelfHub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BookShelfHub.Fullscreen" parent="Theme.BookShelfHub">
        <item name="android:actionBarStyle">@style/Widget.Theme.BookShelfHub.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BookShelfHub.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>